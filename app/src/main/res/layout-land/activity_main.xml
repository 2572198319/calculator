<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NewApi"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_number"
        android:layout_width="match_parent"
        android:layout_height="57sp"
        android:clickable="true"
        android:gravity="right"

        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/out_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/out_number"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:clickable="true"
        android:gravity="right"
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/GridLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.90" />

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="8"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/mc"

            android:layout_row="0"
            android:layout_column="4"
            android:text="mc" />
        <Button
            android:id="@+id/madd"

            android:layout_row="0"
            android:layout_column="5"
            android:text="m+" />

        <Button
            android:id="@+id/mmin"

            android:layout_row="0"
            android:layout_column="6"
            android:text="m−" />

        <Button
            android:id="@+id/tenX"

            android:layout_row="0"
            android:layout_column="3"
            android:text="10ˣ" />

        <Button
            android:id="@+id/yX"

            android:layout_row="1"
            android:layout_column="3"
            android:text="yˣ" />

        <Button
            android:id="@+id/lg"

            android:layout_row="2"
            android:layout_column="3"
            android:text="lg" />

        <Button
            android:id="@+id/ln"

            android:layout_row="3"
            android:layout_column="3"
            android:text="ln" />

        <Button
            android:id="@+id/eX"

            android:layout_row="4"
            android:layout_column="3"
            android:text="eˣ" />

        <Button
            android:id="@+id/right_bracket"

            android:layout_row="0"
            android:layout_column="2"
            android:text=")" />

        <Button
            android:id="@+id/left_bracket"

            android:layout_row="0"
            android:layout_column="1"
            android:text="(" />

        <Button
            android:id="@+id/twoND"

            android:layout_row="0"
            android:layout_column="0"
            android:text="2nd" />

        <Button
            android:id="@+id/reciprocal"

            android:layout_row="1"
            android:layout_column="0"
            android:text="1/x" />

        <Button
            android:id="@+id/factorial"

            android:layout_row="2"
            android:layout_column="0"
            android:text="x!" />

        <Button
            android:id="@+id/sin"

            android:layout_row="3"
            android:layout_column="0"
            android:text="sin" />

        <Button
            android:id="@+id/sinh"

            android:layout_row="4"
            android:layout_column="0"
            android:text="sinh" />

        <Button
            android:id="@+id/rad"

            android:layout_row="5"
            android:layout_column="0"
            android:text="Rad" />

        <Button
            android:id="@+id/square"

            android:layout_row="1"
            android:layout_column="1"
            android:text="x²" />

        <Button
            android:id="@+id/sqrt"

            android:layout_row="2"
            android:layout_column="1"
            android:text="√" />

        <Button
            android:id="@+id/cos"

            android:layout_row="3"
            android:layout_column="1"
            android:text="cos" />

        <Button
            android:id="@+id/cosh"

            android:layout_row="4"
            android:layout_column="1"
            android:text="cosh" />

        <Button
            android:id="@+id/pai"

            android:layout_row="5"
            android:layout_column="1"
            android:text="π" />

        <Button
            android:id="@+id/cubic"

            android:layout_row="1"
            android:layout_column="2"
            android:text="x³" />

        <Button
            android:id="@+id/Xy"

            android:layout_row="2"
            android:layout_column="2"
            android:text="ˣ√y" />

        <Button
            android:id="@+id/tan"

            android:layout_row="3"
            android:layout_column="2"
            android:text="tan" />

        <Button
            android:id="@+id/tanh"

            android:layout_row="4"
            android:layout_column="2"
            android:text="tanh" />

        <Button
            android:id="@+id/EE"

            android:layout_row="5"
            android:layout_column="2"
            android:text="EE" />

        <Button
            android:id="@+id/rand"

            android:layout_row="5"
            android:layout_column="3"
            android:text="Rand" />

        <Button
            android:id="@+id/mmul"

            android:layout_row="0"
            android:layout_column="7"
            android:text="mr" />

        <Button
            android:id="@+id/number1"

            android:layout_row="4"
            android:layout_column="4"
            android:text="1" />

        <Button
            android:id="@+id/number2"

            android:layout_row="4"
            android:layout_column="5"
            android:text="2" />

        <Button
            android:id="@+id/number3"

            android:layout_row="4"
            android:layout_column="6"
            android:text="3" />

        <Button
            android:id="@+id/number4"

            android:layout_row="3"
            android:layout_column="4"
            android:text="4" />

        <Button
            android:id="@+id/number5"

            android:layout_row="3"
            android:layout_column="5"
            android:text="5" />

        <Button
            android:id="@+id/number6"

            android:layout_row="3"
            android:layout_column="6"
            android:text="6" />

        <Button
            android:id="@+id/number7"

            android:layout_row="2"
            android:layout_column="4"
            android:text="7" />

        <Button
            android:id="@+id/number8"

            android:layout_row="2"
            android:layout_column="5"
            android:text="8" />

        <Button
            android:id="@+id/number9"

            android:layout_row="2"
            android:layout_column="6"
            android:text="9"
            />

        <Button
            android:id="@+id/number0"

            android:layout_row="5"
            android:layout_column="5"
            android:text="0" />

        <Button
            android:id="@+id/clear"

            android:layout_row="1"
            android:layout_column="4"
            android:text="C"
             />

        <Button
            android:id="@+id/back"

            android:layout_row="1"
            android:layout_column="5"
            android:text="CE"
             />

        <Button
            android:id="@+id/add"

            android:layout_row="4"
            android:layout_column="7"
            android:text="+"
            />

        <Button
            android:id="@+id/min"

            android:layout_row="3"
            android:layout_column="7"
            android:text="−"
            />

        <Button
            android:id="@+id/mul"

            android:layout_row="2"
            android:layout_column="7"
            android:text="×"
            />

        <Button
            android:id="@+id/div"

            android:layout_row="1"
            android:layout_column="7"
            android:text="÷"
             />

        <Button
            android:id="@+id/dot"

            android:layout_row="5"
            android:layout_column="6"
            android:text="." />

        <Button
            android:id="@+id/equal"

            android:layout_row="5"
            android:layout_column="7"
            android:text="="
            />

        <Button
            android:id="@+id/symbol"

            android:layout_row="1"
            android:layout_column="6"
            android:text="+/−"
            />

        <Button
            android:id="@+id/percent"

            android:layout_row="5"
            android:layout_column="4"
            android:text="%" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>